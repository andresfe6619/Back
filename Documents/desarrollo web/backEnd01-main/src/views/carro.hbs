<h1>TU CARRITO</h1>
<h2>{{Carro}}</h2>
{{#if hasAny}}
<label for="exampleInputEmail1" class="form-label" > Tu producto</label>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
       <th scope="col">StocK</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  
   {{#each prods}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{title}}</td>
      <td>{{stock}}</td>
      <td>{{colPrice}}</td>
      <td>
      <img src={{thumbnail}} width="100" height="100"></img></td>
